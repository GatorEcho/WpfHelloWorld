<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<TextBlock HorizontalAlignment="Left" Margin="258,199,0,0" TextWrapping="Wrap" Text="Select a message option and then click the button." VerticalAlignment="Top"/>
		<RadioButton x:Name="HelloButton" IsChecked ="True" Content="Hello" HorizontalAlignment="Left" Margin="258,269,0,0" VerticalAlignment="Top"/>
		<RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="440,269,0,0" VerticalAlignment="Top"/>
		<Button Content="Display" HorizontalAlignment="Left" Margin="347,314,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

	</Grid>
</Window>
